{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@microboat/meet/*": ["src/*"],
      "@microboat/app-config": ["src/config/index.ts"],

      "@microboat/common/*": ["../../packages/common/src/*"],
      "@microboat/component/*": ["../../packages/component/src/*"]
    }
  },
  "include": [
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
